let remove_unused_ffs_aux idx p =
    NOT (pexlif_is_hier p) => p |
    val (PINST name attrs lf fa_inps fa_outs ints (P_HIER cs)) = p in
    let pp = el idx cs in
    let o_ff = extract_ff_info pp in
    NOT (has_value o_ff) => eprintf "Selected item not a flop/latch" |
    val (template_ff, sz, clk, en, reset, set, dinp, dout) = get_value o_ff in
    let io_tbl = build_io_tbl p in
    let dout_nds = md_expand_vectors dout in
    let dinp_nds = md_expand_vectors dinp in
    let is_used nd = (get_pt_fanout io_tbl nd) != [] in
    let used = find_all is_used dout_nds in
    used = [] =>
        let cs' = (firstn (idx-1) cs)@(butfirstn idx cs) in
        PINST name attrs lf fa_inps fa_outs ints (P_HIER cs')
    |
    let act_outs = gather dout_nds used in
    let act_inps = gather dinp_nds used in
    let act_out_vecs = merge_vectors act_outs in
    letrec mk_inp_vecs inp_nds (ov:ovs) =
        let cnt = md_size ov in
        let iv = merge_vectors (firstn cnt inp_nds) in
        (ov,iv):(mk_inp_vecs (butfirstn cnt inp_nds) ovs)
     /\    mk_inp_vecs _ [] = []
    in
    let splits = mk_inp_vecs act_inps act_out_vecs in
    let mk1_ff (ov,ivs) =
        let sz = md_size ov in
        let pp' = resize_pexlif sz template_ff in
        let isub = [("clk",[clk]),
                    ("reset", reset),
                    ("en", en),
                    ("set", set),
                    (mk_name sz "d", ivs)]
        in
        let osub = [(mk_name sz "q", [ov])] in
        val (PINST name attrs lf fa_inps fa_outs ints body) = pp' in
        let fa_inps' = map (\(f,as). f, assoc f isub) fa_inps in
        let fa_outs' = map (\(f,as). f, assoc f osub) fa_outs in
        (PINST name attrs lf fa_inps' fa_outs' ints body)
    in
    let new_ffs = map mk1_ff splits in
    let cs' = (firstn (idx-1) cs)@new_ffs@(butfirstn idx cs) in
    PINST name attrs lf fa_inps fa_outs ints (P_HIER cs')
;

let remove_unused_ffs il p =
    il = [] => p |
    let il' = qsort (defix -) il in
    itlist (\idx.\np. remove_unused_ffs_aux idx np) il' p
