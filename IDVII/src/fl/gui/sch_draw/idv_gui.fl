let rewire_outside_connections spec imp =
(dbg_spec := spec) fseq
(dbg_imp := imp) fseq
    val (PINST sname sattrs slf sfa_inps sfa_outs sints sbody) = spec in
    val (PINST iname iattrs ilf ifa_inps ifa_outs iints ibody) = imp in
