let IDV_pattern_replace repeat tr tr_sequence =
    let db = get_rw_db () then
    val (TRANSFORM p_name p_sha_spec p_sha_imp p_just) = tr_sequence then
    let p_imp  = idv_load_pexlif (db_sname db) p_sha_imp then
