let unfold_all_labeled p lbl =
    letrec do1 p =
	val (PINST nm attrs lf fa_inps fa_outs ints (P_HIER chs)) = p in
	let idx = find_first0 (\p. pexlif_get_name p = lbl) chs in
	idx = 0 => p |
	let p' = unfold_pexlif p idx then
	do1 p'
    in
    do1 p
;

