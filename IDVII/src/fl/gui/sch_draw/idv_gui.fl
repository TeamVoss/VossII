let find_next_anon_name tr_name =
    val (IDV_RW_DB sname fname mnames tbl) = get_rw_db () then
    let tr_name' = string_replace tr_name " " "_" in
    //
    let get_mname (top,mname,sha_name) = mname in
    let in_use = map get_mname mnames in
    letrec mk_uniq try =
	NOT (mem try in_use) => try |
	let pat = "^(.*)_([0-9]+)$" in
	val (base,cnt) = NOT (str_reg_match pat try) => (try,0) |
		let sl = str_reg_extract pat try in
		((el 2 sl), sscanf "%d" (el 3 sl))
	in
	(mk_uniq (sprintf "%s_%d" base (cnt+1)))
    in
    let spec_name = mk_uniq (sprintf "%s.spec" tr_name') then
    let imp_name  = mk_uniq (sprintf "%s.imp" tr_name') in
    (spec_name, imp_name)
;

let find_next_anon_transform_name signature class =
    val (IDV_RW_DB sname fname mnames tbl) = get_rw_db () then
    let cur = tbl_member tbl signature => tbl_get tbl signature | [] then
    let in_use = map get_transform_name cur then
    let anons = filter (str_is_prefix "tr_") in_use then
    let next = 
	anons = [] => 1 |
	let indices = qsort (defix -) (map (sscanf "tr_%d") anons) in
	(last indices) + 1
    in
    sprintf "tr_%d_%s" next class
;
non_lazy find_next_anon_transform_name;

