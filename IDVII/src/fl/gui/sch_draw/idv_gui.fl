let get_assert_name (PINST nm attrs lf fa_inps fa_outs ints body) =
    length fa_outs != 1 => "" |
    val (f,as) = hd fa_outs in
    md_size f != 1 => "" |
    let name = hd as in
    NOT (str_is_substr "assert__" name) => "" |
    name
;
    

let duplicate_instance p indices =
    let io = build_io_tbl p then
    let cands = gather (io2children io) indices then
    let names = map get_assert_name cands then
    NOT (mem "" names) =>
	// Assertions
	let cur_assertions = io2assertions io then
	let dup1 (name,cand) p =
	    letrec try i =
		let name' = sprintf "%s<%d>" name i then
		NOT (mem name' cur_assertions) => name' |
		try (i+1)
	    in
	    let name' = try 1 then
	    val (PINST nm attrs lf fa_inps [(f,_)] ints body) = cand then
	    let new = PINST nm attrs lf fa_inps [(f,[name'])] ints body then
	    val (PINST name attrs lf fa_inps fa_outs ints (P_HIER cs)) = p then
	    (PINST name attrs lf fa_inps fa_outs ints (P_HIER (cs@[new])))
	in
	itlist dup1 (zip names cands) p
    |
    // A regular instance
    length indices != 1 => error "Can only duplicate one instance at a time" |
    let idx = hd indices then
    let fanouts = inst_fanout io idx then
    length fanouts < 2 => p |
    let name_db = build_name_db p then
    let to_reconnect = mem idx fanouts => fanouts subtract [idx] | tl fanouts in
    let selected = io_get_child io idx then
    val (PINST sname sattrs slf sfa_inps sfa_outs sints sbody) = selected in
    let aouts = md_extract_vectors (flatmap snd sfa_outs) then
    let new_ints = ref [] in
    let process1 d_idx =
	let driven = io_get_child io d_idx in
	val (PINST dname dattrs df dfa_inps dfa_outs dint dbody) = driven in
	let aouts' = map (get_unique_name name_db) aouts then
	(new_ints := (aouts' @ (deref new_ints))) fseq
	let vsub = vec_zip aouts aouts' then
	let dfa_inps' =
	    let tr (f, as) =
		let tr1 a = (vec_assoc a vsub) catch [a] in
		f, (flatmap tr1 as)
	    in
	    map tr dfa_inps
	in
	let driven' = PINST dname dattrs df dfa_inps' dfa_outs dint dbody then
	let sfa_outs' =
	    let tr (f, as) =
		let tr1 a = (vec_assoc a vsub) catch [a] in
		f, (flatmap tr1 as)
	    in
	    map tr sfa_outs
	in
	let copy = (PINST sname sattrs slf sfa_inps sfa_outs' sints sbody) then
	[copy, driven']
    in
    let new = flatmap process1 to_reconnect then
    val (PINST name attrs lf fa_inps fa_outs ints (P_HIER cs)) = p then
    let keep = gather cs ((1 upto (length cs)) subtract to_reconnect) then
    let cs' = keep @ new then
    let ints' = ints @ (deref new_ints) then
    (PINST name attrs lf fa_inps fa_outs ints' (P_HIER cs'))
;



